from pyrogram import Client, filters
from pyrogram.types import Message
import asyncio

async def send_to_all(app: Client, message: Message, text: str):
    # –ü–æ–ª—É—á–∞–µ–º —Å–ø–∏—Å–æ–∫ –≤—Å–µ—Ö –¥–∏–∞–ª–æ–≥–æ–≤
    dialogs = app.get_dialogs()
    
    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –≤ –∫–∞–∂–¥—ã–π –¥–∏–∞–ª–æ–≥
    sent = 0
    errors = 0
    async for dialog in dialogs:
        try:
            # –ü—Ä–æ–ø—É—Å–∫–∞–µ–º —á–∞—Ç—ã —Å —Å–∞–º–∏–º —Å–æ–±–æ–π –∏ —Å–ª—É–∂–µ–±–Ω—ã–µ
            if dialog.chat.type in ["group", "supergroup", "private"]:
                await app.send_message(dialog.chat.id, text)
                sent += 1
                await asyncio.sleep(0.5)  # –ó–∞–¥–µ—Ä–∂–∫–∞ –¥–ª—è –∏–∑–±–µ–∂–∞–Ω–∏—è —Ñ–ª—É–¥–∞
        except Exception as e:
            print(f"Error sending to {dialog.chat.id}: {e}")
            errors += 1
    
    return sent, errors

@app.on_message(filters.command("—Ä–∞—Å—Å—ã–ª", prefixes=".") & filters.reply)
async def forward_replied_message(client, message: Message):
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º, —è–≤–ª—è–µ—Ç—Å—è –ª–∏ –æ—Ç–ø—Ä–∞–≤–∏—Ç–µ–ª—å —Ä–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫–æ–º
    if message.from_user.username != "oqesk":
        await message.reply("‚õî –£ –≤–∞—Å –Ω–µ—Ç –ø—Ä–∞–≤ –Ω–∞ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ —ç—Ç–æ–π –∫–æ–º–∞–Ω–¥—ã!")
        return
    
    replied = message.reply_to_message
    if not replied:
        await message.reply("‚Ñπ –û—Ç–≤–µ—Ç—å—Ç–µ –Ω–∞ —Å–æ–æ–±—â–µ–Ω–∏–µ, –∫–æ—Ç–æ—Ä–æ–µ –Ω—É–∂–Ω–æ —Ä–∞–∑–æ—Å–ª–∞—Ç—å!")
        return
    
    # –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—Å—Ç –∏–∑ —Å–æ–æ–±—â–µ–Ω–∏—è –∏–ª–∏ –ø–æ–¥–ø–∏—Å—å –∫ –º–µ–¥–∏–∞
    text = replied.text or replied.caption or ""
    if not text and not replied.media:
        await message.reply("‚ö† –°–æ–æ–±—â–µ–Ω–∏–µ –Ω–µ —Å–æ–¥–µ—Ä–∂–∏—Ç —Ç–µ–∫—Å—Ç–∞ –∏–ª–∏ –º–µ–¥–∏–∞!")
        return
    
    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
    progress = await message.reply("üîÑ –ù–∞—á–∏–Ω–∞—é —Ä–∞—Å—Å—ã–ª–∫—É...")
    
    if replied.media:
        # –î–ª—è –º–µ–¥–∏–∞ —Å –ø–æ–¥–ø–∏—Å—å—é
        sent, errors = await forward_media_to_all(client, replied)
    else:
        # –î–ª—è —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π
        sent, errors = await send_to_all(client, message, text)
    
    await progress.edit(f"‚úÖ –†–∞—Å—Å—ã–ª–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞!\n\n–û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ: {sent}\n–û—à–∏–±–æ–∫: {errors}")

@app.on_message(filters.command("—Ö—É–π", prefixes="."))
async def send_custom_message(client, message: Message):
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º, —è–≤–ª—è–µ—Ç—Å—è –ª–∏ –æ—Ç–ø—Ä–∞–≤–∏—Ç–µ–ª—å —Ä–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫–æ–º
    if message.from_user.username != "oqesk":
        await message.reply("‚õî –£ –≤–∞—Å –Ω–µ—Ç –ø—Ä–∞–≤ –Ω–∞ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ —ç—Ç–æ–π –∫–æ–º–∞–Ω–¥—ã!")
        return
    
    # –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—Å—Ç –ø–æ—Å–ª–µ –∫–æ–º–∞–Ω–¥—ã
    text = " ".join(message.command[1:])
    if not text:
        await message.reply("‚Ñπ –£–∫–∞–∂–∏—Ç–µ —Ç–µ–∫—Å—Ç –¥–ª—è —Ä–∞—Å—Å—ã–ª–∫–∏ –ø–æ—Å–ª–µ –∫–æ–º–∞–Ω–¥—ã!")
        return
    
    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
    progress = await message.reply("üîÑ –ù–∞—á–∏–Ω–∞—é —Ä–∞—Å—Å—ã–ª–∫—É...")
    sent, errors = await send_to_all(client, message, text)
    await progress.edit(f"‚úÖ –†–∞—Å—Å—ã–ª–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞!\n\n–û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ: {sent}\n–û—à–∏–±–æ–∫: {errors}")

async def forward_media_to_all(app: Client, message: Message):
    sent = 0
    errors = 0
    dialogs = app.get_dialogs()
    
    async for dialog in dialogs:
        try:
            if dialog.chat.type in ["group", "supergroup", "private"]:
                await message.copy(dialog.chat.id)
                sent += 1
                await asyncio.sleep(0.5)
        except Exception as e:
            print(f"Error sending to {dialog.chat.id}: {e}")
            errors += 1
    
    return sent, errors
